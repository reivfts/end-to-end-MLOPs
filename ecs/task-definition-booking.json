{
  "family": "campus-services-booking",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::643771447281:role/ecsTaskExecutionRole",
  "executionRoleArn": "arn:aws:iam::643771447281:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "booking",
      "image": "643771447281.dkr.ecr.us-east-2.amazonaws.com/campus-services-hubs:booking-cleaned-architecture",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DATABASE_URL",
          "value": "postgresql://postgres:YourSecurePassword123@3.21.163.202:5432/booking_db"
        },
        {
          "name": "REDIS_URL",
          "value": "redis://redis.campus-services.local:6379"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/campus-services",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "booking"
        }
      }
    }
  ]
}
